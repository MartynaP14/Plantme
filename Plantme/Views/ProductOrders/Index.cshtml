@model IEnumerable<Plantme.Models.ProductOrder>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderSubtotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserPhoneNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderSubtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserPhoneNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductOrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductOrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductOrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
